#Task4
def binarySearch ( arr, len, x):#arrray, lenth of array, target number 
    mid = int(arr/2)#find middle
    if arr[mid] == x: 
        return mid #compare left
    elif arr[mid] > x: 
        return binarySearch(arr, len, x) #compare right
    else: 
        return binarySearch(arr, len, x) 
    
    X = numb.sortArray(arr)
    Y = binarySearch(arr, len, x)
    x_values=numb.sortArray()
    y_values=numb.sortArray()
    plt.vlines(199, 100, 0ï¼‰#set crossing line
    plt.plot(X,Y)
    plt.show()
